<Window x:Class="WpfAppProjekty.PasswordDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppProjekty"
        mc:Ignorable="d"
        Title="Projekty" Height="120" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="26" Width="60"/>
        <PasswordBox x:Name="passwordBox" Margin="80,15,10,0" VerticalAlignment="Top" Height="18"/>
        <Button x:Name="buttonOk" Content="OK" Margin="0,0,70,10" VerticalAlignment="Bottom" Height="20" Width="50" HorizontalAlignment="Right" Click="buttonOk_Click"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="20" Width="50" Click="buttonCancel_Click"/>

    </Grid>
</Window>
